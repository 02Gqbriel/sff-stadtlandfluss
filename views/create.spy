<!DOCTYPE html>
<html lang="de">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StadtLandFluss | Erstellen</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Acme&display=swap" rel="stylesheet" />
    <style>
        * {
            overflow-x: hidden;
            font-family: 'Acme', sans-serif;
        }
        
        body {
            background-color: #b8fff9;
            text-align: center;
        }
        
        h1 {
            font-size: 50px;
        }
        
        .settingsContainer {
            text-align: left;
            width: 50vw;
            font-size: 30px;
            line-height: 60px;
        }
        
        input {
            width: 300px;
            height: 30px;
            font-size: 25px;
            border-radius: 10px;
        }
        
        .centerStuff {
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .createGame {
            background-color: #42c2ff;
            border-radius: 20px;
            width: 140px;
            margin-top: 40px;
            font-size: 30px;
        }
    </style>
</head>

<body>
    <h1>Erstellen</h1>
    <div class="centerStuff">
        <div class="settingsContainer">
            Anzahl der Runden:
            <input type="number" class="rundenzahl" />
            <br /> Zeit pro Runde (in Minuten): <input type="number" class="rundenzeit" /> <br /> Anzahl der Kategorien: <input type="number" class="anzKategorien" /> <br /> Kategorie 1: <input type="text" /> <br /> Kategorie 2: <input type="text" />            <br /> Kategorie 3: <input type="text" /> <br /> Kategorie 4:<input type="text" />
        </div>
    </div>
    <div class="submitSettings">
        <button type="submit" class="createGame">Erstellen</button>
    </div>
    <script>
        document.querySelector('.createGame').onclick = async() => {
            const i = [...document.querySelectorAll('input')],
                r = [];
            for (let j = 0; j < i.length; j++) {
                const v = i[j].value;

                if (v == '' || v == undefined) return;

                r.push({
                    id: i[j].classList[0] == undefined ? 'kategorie' + (j - 2) : i[j].classList[0],
                    val: v,
                });
            }

            console.log(r);

            const res = await fetch('/create', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json;charset=utf-8',
                },
                body: JSON.stringify(r),
            });

            console.log(res);
        };
    </script>
</body>

</html>